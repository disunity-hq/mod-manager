{
  "name": "disunity_manager",
  "version": "0.0.1",
  "main": "dist/electron.bundle.js",
  "license": "MIT",
  "scripts": {
    "webpack_main_dev": "webpack --config webpack.config.main.dev.js",
    "webpack_renderer_dev": "webpack --config webpack.config.renderer.dev.js",
    "webpack_main_prod": "webpack --config webpack.config.main.prod.js",
    "webpack_renderer_prod": "webpack --config webpack.config.renderer.prod.js",
    "dev": "npm run webpack_main_dev && webpack-dev-server --config webpack.config.renderer.dev.js",
    "build": "npm run webpack_main_prod && npm run webpack_renderer_prod && electron-builder"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/node": "^11.13.9",
    "@types/react": "^16.8.14",
    "@types/react-dom": "^16.8.4",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.5",
    "babel-preset-env": "^1.7.0",
    "css-loader": "^2.1.1",
    "electron": "4.1.4",
    "electron-builder": "^20.39.0",
    "electron-is-dev": "^1.1.0",
    "eslint": "^5.16.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "prettier": "^1.17.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.4.3",
    "typescript": "^3.4.5",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1"
  },
  "build": {
    "appId": "com.disunity.manager",
    "files": [
      "dist/bundle.js",
      "dist/electron.bundle.js",
      "dist/index.html"
    ],
    "directories": {
      "output": "build"
    }
  }
}
