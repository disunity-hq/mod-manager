{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "es7", "es2017", "dom"],
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "incremental": true,
    "sourceMap": true,
    "plugins": [{ "transform": "ts-optchain/transform" }]
  },
  "awesomeTypescriptLoaderOptions": {
    "useCache": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
